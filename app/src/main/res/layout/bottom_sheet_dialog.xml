<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <!--image view for displaying course image-->
        <ImageView
            android:id="@+id/img_plat_sheet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
             />

        <!--text view for displaying course name-->
        <TextView
            android:id="@+id/txt_name_plat_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/img_plat_sheet"
            android:layout_toRightOf="@id/img_plat_sheet"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--text view for displaying course tracks-->
        <TextView
            android:id="@+id/txt_price_plat_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_plat_sheet"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/img_plat_sheet"
            android:layout_toRightOf="@id/img_plat_sheet"
            android:text="50€"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--button for dismissing our dialog-->
        <Button
            android:id="@+id/idBtnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_plat_sheet"
            android:layout_margin="10dp"
            android:text="Añadir plato"
            android:textAllCaps="false" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>